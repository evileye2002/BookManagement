@model Book

@{
    ViewData["Title"] = "Search Result";
}

<h1>Search Result</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.TextAreaFor(model => model.BookDesc, new { rows = 20, cols = 120, @readonly = true })
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookImage)
        </dt>
        <dd class="col-sm-10">
            <img class="card-header" src="/Images/@Html.DisplayFor(model => model.BookImage)" height="400" width="300">
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookID" class="btn btn-primary">Sửa</a> |
    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
</div>
